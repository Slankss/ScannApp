<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtP_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxWidth="100dp"
            android:text="Ürün Adı"
            android:textColor="@color/black"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/txtP_Quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/btn_SepetIncreaseQuality"
            android:text="Ürün Adedi"
            android:textColor="@color/black"

            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/txtP_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/txtTL"
            android:text="Fiyat"
            android:textColor="@color/black"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/txtTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btnDelete"
            android:text="TL"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold">


        </TextView>


        <ImageView
            android:id="@+id/btn_SepetDecreaseQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/txtP_Quality"
            android:src="@drawable/minus"></ImageView>

        <ImageView
            android:id="@+id/btn_SepetIncreaseQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/txtP_Price"
            android:src="@drawable/add"

            ></ImageView>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_alignParentEnd="true"
            ></ImageView>

    </RelativeLayout>


</LinearLayout>