<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.scanapp">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_square"
        android:label="Akıllı Market Arabası"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScanApp">
        <activity
            android:name="com.example.scanapp.View.ConfirmCardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.scanapp.View.ProductListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.scanapp.View.SepeteEkleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.scanapp.View.AddProductActivity"
            android:exported="false" />
        <activity
            android:name="com.example.scanapp.View.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.scanapp.Model.Capture"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>